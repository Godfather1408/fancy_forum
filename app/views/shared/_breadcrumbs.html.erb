<ul class="breadcrumb">
	
  <% if activ %>
  	<li><%= link_to "FancyForum", root_url %> <span class="divider">/</span></li>
  <% else %>
  	<li class="active">FancyForum</li>
  <% end %>
  
  <% if category %>
  	  <li><%= link_to category.title, forum_category_path(:id => category.id) %> <span class="divider">/</span></li>
  <% end %>
  
  <% if user %>
  	  <li><%= link_to "Users", users_path %> <span class="divider">/</span></li>
  <% end %>
  <li class="active"><%= activ %></li>
</ul>