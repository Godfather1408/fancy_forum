<h1>Listing messages</h1>

<table class="table-striped">
  <tr>
	<th class="span1">Sender</th>
    <th class="span5">Subject</th>
    <th class="span1">Date</th>
    <th></th>
  </tr>

<% @messages.each do |message| %>
  <tr>
	<td><%= message.sender_id %></td>
    <td><%= link_to message.subject, message %></td>
    <td><%= message.created_at %></td>
    <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Message', new_message_path, :class => "btn btn-primary" %>
