    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  
  <% if cat_id %>
  	<%= f.hidden_field :category_id, :value => cat_id %>
  <% else %>
  	<div class="field">
    	<%= f.label :category_id %><br />
